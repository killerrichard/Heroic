{
  "name": "heroic",
  "version": "1.0.0",
  "description": "node web app",
  "main": "build/boot.js",
  "bin": "build/boot.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chrismpettyjohn/heroic.git"
  },
  "keywords": [
    "node.js"
  ],
  "author": "Chris Pettyjohn",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chrismpettyjohn/heroic/issues"
  },
  "homepage": "https://github.com/chrismpettyjohn/heroic#readme",
  "dependencies": {
    "async": "^2.6.0",
    "bcrypt": "^1.0.3",
    "bookshelf": "^0.12.0",
    "bookshelf-cascade-delete": "^2.0.1",
    "fastify": "^1.0.0-rc.3",
    "fastify-formbody": "^1.2.5",
    "fastify-static": "^0.8.0",
    "glob": "^7.1.2",
    "ini": "^1.3.5",
    "jsonwebtoken": "^8.2.0",
    "knex": "^0.14.4",
    "mysql2": "^1.5.2",
    "npm": "^5.7.1",
    "randomstring": "^1.1.5"
  },
  "devDependencies": {
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "fastify-helmet": "^1.0.3"
  },
  "scripts": {
    "start": "node ./build/boot",
    "debug": "nodemon -L --exec babel-node ./src/boot.js",
    "build": "babel ./src --out-dir=build --copy-files"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": [
              "last 2 Chrome versions"
            ]
          }
        }
      ]
    ],
    "plugins": [
      "transform-class-properties"
    ],
    "ignore": [
      "src/public/**/*.js"
    ]
  },
  "pkg": {
    "scripts": [
      "build/app/**/*.js",
      "node_modules/**/*.js"
    ],
    "assets": [
      "build/public/**/*",
      "build/app/config/**/*"
    ],
    "targets" : [
      "win"
    ]
  }
}
